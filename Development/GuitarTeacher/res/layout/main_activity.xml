<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/action_settings"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:layout_marginTop="50px"
        android:contentDescription="@string/action_settings" />

    <ImageView
        android:id="@+id/btn_exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="152px"
        android:layout_marginTop="722px"
        android:contentDescription="@string/action_settings" />

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="724px"
        android:layout_marginTop="431px"
        android:contentDescription="@string/action_settings" />

    <ImageView
        android:id="@+id/btn_tuner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1310px"
        android:layout_marginTop="624px"
        android:contentDescription="@string/action_settings" />

    <ImageView
        android:id="@+id/btn_metronome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1485px"
        android:layout_marginTop="130px"
        android:contentDescription="@string/action_settings" />

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/facebook_profile_picture"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:layout_toLeftOf="@id/facebook_profile_picture"
        android:contentDescription="@string/profile_picture"
        android:visibility="invisible" />

    <com.mad.guitarteacher.display.views.TotalPointsView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/profile_picture" />

</RelativeLayout>